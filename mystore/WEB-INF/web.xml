<web-app xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://wwww.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http:///java.sun.com/xml/ns/j2ee/web-app_2_4.xsd" version="2.4">


<resource-ref>
    <description>Products</description>
    <res-ref-name>jdbc/Products</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
</resource-ref>

<servlet>
	<servlet-name>Ch3 Prod</servlet-name>
	<servlet-class>com.example.web.InsertProduct</servlet-class>
</servlet>

<servlet-mapping>
	<servlet-name>Ch3 Prod</servlet-name>
	<url-pattern>/InsertProduct.do</url-pattern>
</servlet-mapping>
</web-app>
